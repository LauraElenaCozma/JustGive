
@{
    ViewBag.Title = "Available Donations";
}

<h2>@ViewBag.Title</h2>

@foreach (var donation in ViewBag.Donations)
{
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Label("Title", "Title:")
            <br />
            @if (@donation.IsDonated == true)
            {
                <p>@donation.Title - <em>Donated</em></p>
            }
            else
            {
                <p>@donation.Title</p>
            }

            @Html.Label("Description", "Description:")
            <br />
            <p>@donation.Description</p>
            @using (Html.BeginForm(actionName: "Details", controllerName: "Donation",
                    method: FormMethod.Get, routeValues: new { id = donation.DonationId }))
            {
                <button class=" btn btn-primary">Details</button>
            }
        </div>
    </div>
}

@using (Html.BeginForm(actionName: "New", controllerName: "Donation", method: FormMethod.Get))
{
    <button class="btn btn-primary">Add new Donation</button>
}



