@model JustGive.Models.Location
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Location"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(loc => loc.LocationId)
    <br />
    @Html.Label("City", "Location's city")
    @Html.EditorFor(loc => loc.City, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(loc => loc.City, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Country", "Location's country")
    @Html.EditorFor(loc => loc.Country, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(loc => loc.Country, "", new { @class = "text-danger" })
    <br />
    <button class=" btn btn-primary" type="submit">Update</button>
}
