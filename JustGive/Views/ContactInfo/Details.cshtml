@model JustGive.Models.ContactInfo
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@Html.Label("Name:", "Name")
<p>@Model.Name</p>
<br />
@Html.Label("PhoneNumber", "Phone Number:")
<p>@Model.PhoneNumber</p>
<br />
@Html.Label("BirthDate", "Birth Date:")
<p>@Model.BirthDate</p>
<br />

@if (User.IsInRole("Admin"))
{
    using (Html.BeginForm(actionName: "Edit", controllerName: "ContactInfo", method: FormMethod.Get, routeValues: new { id = Model.Id }))
    {
        <button class="btn btn-primary col-lg-1" style="margin-right:5px" type="submit">Edit</button>
    }
    <br />
}

<br />
