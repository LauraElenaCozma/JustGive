@model JustGive.Models.Tag
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
@using(Html.BeginForm(actionName: "Edit", controllerName: "Tag"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(t => t.TagId)
    <br />
    @Html.Label("Name", "Tag's name")
    @Html.EditorFor(t => t.Name, new { htmlAttributes = new {@class = "form-control"}})
    @Html.ValidationMessageFor(t => t.Name, "", new { @class = "text-danger"})
    <br />
    <button class=" btn btn-primary" type="submit">Update</button>
}

